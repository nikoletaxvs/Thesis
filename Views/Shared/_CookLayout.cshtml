@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ThesisOct2023</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ThesisOct2023.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav style="background-color:#2E2E2E;z-index:10;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light p-2">
            <div class="container-fluid">
                <a class="nav-title" asp-area="" asp-controller="Home" asp-action="Index">Unifood</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 mx-2">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Cook" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Cook" asp-action="Food">Food</a>
                        </li>
                        
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                Menu
                            </button>
                            <ul class="dropdown-menu bg-secondary" aria-labelledby="dropdownMenuButton1">
                                <li><a class="nav-link text-white" asp-area="" asp-controller="Cook" asp-action="WeeksMenu">View Menu</a></li>
                                <li><a class="nav-link text-white" asp-area="" asp-controller="Cook" asp-action="CreateMenu">Create Menu</a></li>
                            </ul>
                        </div>
                    </ul>
                   
                     
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="mb-1">
        <main role="main" class="mb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/Scripts/multistep-form.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
