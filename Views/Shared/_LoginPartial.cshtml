@using Microsoft.AspNetCore.Identity;
@using ThesisOct2023.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<ul class="navbar-nav">

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-controller="Account" asp-action="Logout">
            <button  type="submit" class="nav-link btn btn-link text-white">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a  asp-controller="Account" asp-action="Register" class="nav-link text-white text-decoration-none bg-warning p-3">Register</a>
       
    </li>
    <li class="nav-item">
            <a  asp-controller="Account" asp-action="Login" class="nav-link text-white text-decoration-none bg-warning p-3">Login</a>
       
    </li>
   
}
</ul>
