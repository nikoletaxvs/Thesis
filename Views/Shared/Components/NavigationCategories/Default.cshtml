@model IEnumerable<string>


<div class="d-flex flex-row  flex-wrap bd-highlight mb-3">
            <div class="p-2">
                <a class="btn btn-outline-secondary" asp-action="Food"
                   asp-controller="Cook" asp-route-category="">
                    All
                </a>
            </div>
            @foreach (string category in Model ?? Enumerable.Empty<string>())
            {
                <div class="p-2">
                <a class="btn btn-outline-secondary"
               asp-action="Food" asp-controller="Cook"
               asp-route-category="@category"
               asp-route-productPage="1">
                    @category
                </a>
                </div>
            }
        </div>
   

