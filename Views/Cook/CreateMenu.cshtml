
@{
    ViewData["Title"] = "CreateMenu";
    Layout = "~/Views/Shared/_CookLayout.cshtml";
    List<string> weekDays = new List<string>() {"Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"};
}
@model MenuFormView
<h1>CreateMenu</h1>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<!-- MultiStep Form -->
<body>
    <div class="row">
        <div class="col-md-8 col-md-offset-3">
            <form id="msform" asp-controller="Cook" asp-action="PostMenu" method="post">
                <!-- progressbar -->
                <ul id="progressbar">
                    @foreach(var weekday in weekDays)
                    {
                        if(weekDays[0] == weekday)
                        {
                            <li class="active">@weekday</li>
                            continue;
                        }
                        <li>@weekday</li>

                    }
                   
                    
                </ul>
                <!-- fieldsets -->
                @foreach(var weekday in weekDays)
                {
                    <fieldset>
                        <h2 class="fs-title">@weekday</h2>
                        <h3 class="fs-subtitle">What will be in @weekday's menu?'</h3>
                        <label class="form-label">Select Breakfast</label>
                        <select class="form-select" asp-items="Model.ItemsSelectList" asp-for="BreakFast"></select>
                        <label class="form-label">Select Breakfast</label>
                        <select class="form-select" asp-items="Model.ItemsSelectList" asp-for="Launch"></select>
                        <label class="form-label">Select Breakfast</label>
                        <select class="form-select" asp-items="Model.ItemsSelectList" asp-for="Dinner"></select>
                        
                        @if (weekday != weekDays[0])
                        {
                            <input type="button" name="previous" class="previous action-button" value="Previous" />
                        }
                        <input type="button" name="next" class="next action-button" value="Next" />
                        @if(weekday == weekDays[6])
                        {
                            <button type="submit">Submit</button>
                        }

                    </fieldset>
                    @if (weekday == weekDays[6])
                    {
                        <fieldset >
                            <h2 class="fs-title">Done</h2>
                            <h3 class="fs-subtitle">Successfully submitted</h3>



                        </fieldset>
                    }
                }
                
                
            </form>
            
   
        </div>
    </div>

 

</body>

<!-- /.MultiStep Form -->