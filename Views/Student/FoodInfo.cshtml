
@{
    ViewData["Title"] = "FoodInfo";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
@model FoodReviewView

<section id="FoodInfo" class="section-padding-small">
    <div class="container pt-4 theme-shadow bg-white">
        <div class="row pt-4 p-3">
            <div class="col-2">
                <img class="col-lg-12" style="border-radius:30px;" src="~/@Model.food.ImageUrl" />
            </div>
            <div class="col">
                <h2>@Model.food.Title </h2>
                    @if (Model.food.AvgRating != null)
                    {
                        <div class="small mt-2">Rating @((int)(Model.food.AvgRating))/5</div>
                        <div class="my-2 mb-3">
                            @for (var i = 0; i < (int)Model.food.AvgRating; i++)
                            {
                                <img src="~/lib/icons/star-orange.png" />
                            }
                            @for (var j = 0; j < 5 - (int)Model.food.AvgRating; j++)
                            {
                                <img src="~/lib/icons/star-black.png" />
                            }
                        </div>
                    }
                    else
                    {
                        <div class="rating-text mt-2 small">Not Rated</div>
                        <div class="my-2 mb-3">
                            @for (var i = 0; i < 5; i++)
                            {
                                <img src="~/lib/icons/star-black.png" />
                            }
                        </div>
                    }
               
                <p>@Model.food.Description</p>
               
            </div>
        </div>
    </div>
</section>

<section id="comments" >
    <div class="container theme-shadow bg-white p-2 comments-container">
        <h3 class="p-4">  Reviews (@Model.reviews.Count())</h3>
        <div class="row">
            @if (Model.Comments != null)
            {
                @foreach (var c in Model.Comments)
                {
                    <div class="container ">
                        <div class="row p-4">
                            <div>
                                <img src="~/images/userImg.png" width="30" height="30" />
                                <span class="fw-bold" style="color:#4357d4;">Anonymous_Student</span>
                            </div>
                            <div class="px-4 py-2">@c</div>
                        </div>
                    </div>
                            
                }
            }
        </div>
    </div>
</section>
