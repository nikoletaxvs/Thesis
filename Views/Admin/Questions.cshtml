@model IEnumerable<Question>
@{
    ViewData["Title"] = "PostQuestions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text ">Review Question List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="CreateQuestion" class="btn btn-brand">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Question
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Question Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Title
                    </td>
                    <td width="30%">
                        @obj.Id
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Admin" asp-action="EditQuestion" asp-route-id="@obj.Id"
                               class="btn btn-brand mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Admin" asp-action="DeleteQuestion" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

