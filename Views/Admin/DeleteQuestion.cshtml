@model Question
@{
    ViewData["Title"] = "DeleteQuestion";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Question</h1>
<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Title"></label>
			<input asp-for="Title" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Description"></label>
			<input asp-for="Description" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Admin" asp-action="Questions" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

